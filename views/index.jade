extends ./layout.jade
block content
	nav(class="navbar navbar-default" style="background-color: #037E8C;")
		div(class="container-fluid")
			div(class="navbar-header")
				button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false" style="background-color: #024959;")
					span(class="sr-only") Toggle navigation
					span(class="icon-bar")
					span(class="icon-bar")
					span(class="icon-bar")
				a(class="navbar-brand navegacion" href="/")
					img(alt="" src="/imgs/titulo-icono.png" style="width: 1.5em; height: 1.5em;")
			div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
				ul(class="nav navbar-nav navbar-right")
					li(class="active")
						a(href="/" style="color: black;") Inicio
						span(class="sr-only") (current)
					li
						a(href="#" style="color: white;") Pelicula
					li
						a(href="/login" style="color: white;") Login

	div(class="container")
		div(class="row")
			div(class="col-md-12 text-center")
				div(id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="border: 4px solid #024959; border-radius: 5px;")
					ol(class="carousel-indicators")
						li(data-target="#carousel-example-generic" data-slide-to="0" class="active")
						li(data-target="#carousel-example-generic" data-slide-to="1")
						li(data-target="#carousel-example-generic" data-slide-to="2")
					div(class="carousel-inner" role="listbox")
						div(class="item active")
							img(src="/imgs/death_1.jpg" alt="" style="margin: 0 auto;")
							div(class="carousel-caption")
								
						div(class="item")
							img(src="/imgs/death_2.jpg" alt="" style="margin: 0 auto;")
							div(class="carousel-caption")
								
						div(class="item")
							img(src="/imgs/death_3.jpg" alt="" style="margin: 0 auto;")
							div(class="carousel-caption")
								h1 El Hombre de Acero
					a(class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev")
						span(class="glyphicon glyphicon-chevron-left" aria-hidden="true")
						span(class="sr-only") Previous
					a(class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next")
						span(class="glyphicon glyphicon-chevron-right" aria-hidden="true")
						span(class="sr-only") Next

	div(class="container")
		div(class="row")
			each peli in peliculas
				div(class="col-md-3")
					div(class="thumbnail" style="height: 27em; background-color: #FFFFFA; border: 4px solid #024959; border-radius: 5px;")
						img(src="#{peli.Poster}" alt="" style="height: 15em;")
						div(class="caption")
						div(class="well text-center") #{peli.Title}
						div(class="text-right")
							a(href="/pelicula/#{peli._id}" class="btn btn-info btn-sm" role="button") Más información